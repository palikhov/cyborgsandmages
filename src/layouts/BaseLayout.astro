---
import '@fontsource/inter/variable.css';
import '@fontsource/lora/variable.css';

import BaseHead from '~components/BaseHead.astro';
import Footer from '~components/Footer.astro';
import Header from '~components/Header.astro';
import Sidebar from '~components/Sidebar.astro';

const { title, description, headings, sidebar = true } = Astro.props;
---

<html lang="ru" class="h-full min-h-full bg-brand-night text-brand-ivory">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="mx-auto flex h-full min-h-full w-full max-w-7xl flex-col sm:px-6 lg:px-8">
		<Header />
		<main class="flex flex-col gap-6 xl:flex-row">
			<div class="flex-1">
				<slot />
			</div>
			{sidebar && <Sidebar {headings} />}
		</main>
		<Footer />
	</body>
</html>
