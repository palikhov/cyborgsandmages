---
interface Props {
	href: string;
	title: string;
}

const { href, title } = Astro.props;
---

<div class="mx-auto flex aspect-video w-full max-w-4xl flex-col rounded bg-brand-crimson p-2">
	<span class="mx-auto pb-2 text-center text-lg font-bold text-white">{title}</span>
	<iframe
		class="rounded"
		loading="lazy"
		width="100%"
		height="100%"
		src={href}
		title={title}
		allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
		allowfullscreen
	></iframe>
</div>
