---
export type Props = {
	v?: "ivory" | "gold" | "crimson" | "wave";
};

const { v } = Astro.props;

let className: string;

switch (v) {
	case "crimson":
		className = "border-brand-crimson";
		break;
	case "gold":
		className = "border-brand-gold";
		break;
	case "wave":
		className = "border-brand-wave";
		break;
	default:
		className = "border-brand-ivory";
}
---

<aside class:list={["my-4 rounded border-l-8 bg-brand-mist p-2 text-white", className]}>
	<slot />
</aside>
