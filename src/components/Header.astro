---
import HeaderLink from '~components/HeaderLink.astro';
import Socials from '~components/Socials.astro';
import { SITE_NAVIGATION, SITE_TITLE } from '../consts';
---

<header class="my-4 w-full sm:my-6">
	<div class="flex flex-col items-center gap-2 md:flex-row">
		<a href="/" class="flex flex-1 items-center gap-2">
			<img src="/images/decoration/logo-small.webp" alt={SITE_TITLE} class="h-14 w-14" />
			<h2 class="font-serif text-xl font-bold text-brand-ivory sm:text-2xl">
				{SITE_TITLE}
			</h2></a
		>
		<Socials />
	</div>
	<nav
		class="mt-4 flex w-full flex-wrap justify-evenly gap-4 bg-brand-mist px-1 py-2 text-sm sm:gap-2 sm:rounded-md sm:px-6 sm:text-base"
	>
		{SITE_NAVIGATION.map((item) => <HeaderLink href={item.href}>{item.label}</HeaderLink>)}
	</nav>
</header>
